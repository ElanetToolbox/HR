@model HR.Data.Models.LinkertQuestion
        <div class="panel-default" style="margin-top:10px">
            <div class="panel-heading">
                <h4>@Model.Title</h4>
            </div>
            <div class="panel-body">
                <h5 style="line-height:20px;">@Model.text</h5>
                <table align="center" cellspacing="15" cellpadding="15">
                    <tr>
                        @for (int i = 1; i <= Model.options.Count; i++)
                        {
                            string text = Model.options.Where(x => x.value == i).Single().text;
                            int tCount = Model.options.Where(x => x.text == text).Count();
                            <td style="padding:5px" width="70px" align="center">@i</td>
                        }
                        <td rowspan="2">
                            <i class="fa fa-info-circle" title="@Model.descriptions" style="font-size:20px;color:#30889c;padding-left:20px;" />
                        </td>
                    </tr>
                    <tr>
                        @for (int i = 1; i <= Model.options.Count; i++)
                        {
                            string title = Model.options.Where(x => x.value == i).Single().description;
                            <td align="center">
                                @if (Model.savedvalue == i.ToString())
                                {
                                    <input type="radio" title="@title" name="@Model.text" checked="checked" @Html.Raw(ViewBag.Disabled) value="@i"/>
                                }
                                else
                                {
                                    <input title="@title" type="radio" name="@Model.text" @Html.Raw(ViewBag.Disabled) value="@i"/>
                                }
                            </td>
                        }
                    </tr>
                </table>
            </div>
        </div>
