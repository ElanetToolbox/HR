@model HR.Data.Models.Employee

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.FullName)</h2>

<div>
    <hr />
    <table class="table" cellspacing="0">
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        Ονοματεπώνυμο
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FullName)
                    </dd>

                    <dt>
                        Ημ/νία Πρόσληψης
                    </dt>

                    <dd>
                        @Convert.ToDateTime(Model.DateHired).ToString("dd/MM/yyyy")
                    </dd>

                    <dt>
                        Ημ/νία Γέννησης
                    </dt>

                    <dd>
                        @Convert.ToDateTime(Model.DoB).ToString("dd/MM/yyyy")
                    </dd>

                    <dt>
                        Διεύθυνση
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Directorate)
                    </dd>

                    <dt>
                        Είδικότητα
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Specialty)
                    </dd>

                    <dt>
                        Θέση
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Position)
                    </dd>

                    <dt>
                        Ηλικία
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Age)
                    </dd>

                </dl>
            </td>
            <td>
                <img src="@Model.photo_blob_html_image" width="150" height="150"/>
                @*<img src="@Model.Photo" width="150" height="150"/>*@
            </td>
        </tr>
        <tr>
            <th>Εγγραφα</th>
        </tr>
        @*@foreach (var doc in Model.Documents)
        {
            <td>
                <a href="@Url.Content(doc)" target="_blank">@Path.GetFileNameWithoutExtension(doc)</a>
            </td>
        }*@
    </table>
</div>
<p>
    @Html.ActionLink("Επεξεργασία", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Επιστροφή", "Index")
</p>
